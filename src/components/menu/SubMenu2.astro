---
import MenuLink from '@components/menu/MenuLink.astro'

interface Props {
    label: string
    route: string
    parentLabel: string
    routePrefix: string
}

const { label, route, parentLabel, routePrefix } = Astro.props
const isActive = Astro.url.pathname.startsWith(routePrefix)
---

<li aria-labelledby={`${parentLabel}Link`}>
    <button
        id={`${label}Button`}
        data-dropdown-toggle={`${label}Dropdown`}
        data-dropdown-placement="right-start"
        type="button"
        class={'flex items-center justify-between w-full px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white' +
            ' ' +
            (isActive ? 'text-lime-500' : '')}
    >
        {label}
        <!-- Chevron right -->
        <svg
            aria-hidden="true"
            class="w-5 h-5"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
        >
            <path
                fill-rule="evenodd"
                d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                clip-rule="evenodd"></path>
        </svg>
    </button>
    <div
        id={`${label}Dropdown`}
        class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700"
    >
        <ul
            class="py-2 text-sm text-gray-700 dark:text-gray-200"
            aria-labelledby={`${label}Button`}
        >
            <slot />
        </ul>
    </div>
</li>
