---
interface Props {
    href: string
    external?: boolean
    src?: string
    alt?: string
}

const { href, external, src, alt } = Astro.props
---

<a
    href={external ? href : import.meta.env.BASE_URL + href}
    target={external ? '_blank' : '_self'}
    class="flex flex-col md:flex-row items-center max-w-sm sm:max-w-md md:max-w-full bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700"
>
    {
        src && (
            <img
                class="my-auto p-4 object-contain w-36 h-full max-w-[9rem] min-w-[9rem]"
                src={src}
                alt={alt}
            />
        )
    }
    <div class="flex flex-col justify-start p-4 md:pl-0 w-full leading-normal">
        <slot />
    </div>
</a>
